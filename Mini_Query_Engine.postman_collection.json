{
	"info": {
		"_postman_id": "your-collection-id",
		"name": "Mini Query Engine API",
		"description": "Collection for testing the Mini Query Engine API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://mini-query-engine-xxxx.onrender.com",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Process Query",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-API-Key",
						"value": "secure_api_key_123",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"natural_language_query\": \"Find all products with sales above 1000\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/query",
					"host": ["{{base_url}}"],
					"path": ["query"]
				}
			}
		},
		{
			"name": "Get Query Explanation",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "secure_api_key_123",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/explain/1",
					"host": ["{{base_url}}"],
					"path": ["explain", "1"]
				}
			}
		},
		{
			"name": "Validate Query",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "secure_api_key_123",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/validate/1",
					"host": ["{{base_url}}"],
					"path": ["validate", "1"]
				}
			}
		}
	]
} 