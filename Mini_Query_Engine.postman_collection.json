{
	"info": {
		"_postman_id": "your-collection-id",
		"name": "Mini Query Engine API",
		"description": "Collection for testing the Mini Query Engine API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Process Query",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-API-Key",
						"value": "secure_api_key_123",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"natural_language_query\": \"Find all products with sales above 1000\"\n}"
				},
				"url": {
					"raw": "http://localhost:8000/query",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8000",
					"path": ["query"]
				}
			}
		},
		{
			"name": "Get Query Explanation",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "secure_api_key_123",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8000/explain/1",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8000",
					"path": ["explain", "1"]
				}
			}
		},
		{
			"name": "Validate Query",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "secure_api_key_123",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8000/validate/1",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8000",
					"path": ["validate", "1"]
				}
			}
		}
	]
} 